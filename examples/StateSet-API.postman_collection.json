              "raw": "{\n  \"name\": \"Production API Key\",\n  \"permissions\": [\"orders:read\", \"orders:create\", \"inventory:read\"],\n  \"expires_at\": \"2026-12-31T23:59:59Z\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/api-keys",
              "host": ["{{base_url}}"],
              "path": ["auth", "api-keys"]
